package rename

var x_1 = 0

func rename() {
	x_2 := 1
	{
		x := 2
		_ = x
	}
	_ = x_2 // want "Variable 'x' used after previously shadowed"
}

func renameAgain() {
	x_2 := 1
	{
		x := 2
		_ = x
	}
	_ = x_2 // want "Variable 'x' used after previously shadowed"
}

func renameNolint() {
	x := 1
	{
		x := 2
		_ = x
	}
	_ = x //nolint:scopeguard
}

func renameSecond() {
	x_2 := 1
	{
		x := 2
		_ = x
	}
	_ = x_2 //nolint:scopeguard

	{
		x := 2
		_ = x
	}
	_ = x_2 // want "Variable 'x' used after previously shadowed"
}

func shadowedReturn() {
	_ = func() (i_1 int) {
		i_1, a := -1, true

		if a {
			i := -i_1
			if i < 0 {
				return i
			}
		}

		return // want "Variable 'i' used after previously shadowed"
	}
}


func typeSwitch() {
	var item any
	switch v := item.(type) {
	case int:
		switch v := item.(type) {
		case int:
			_ = v
		}
		_ = v // want "Variable 'v' used after previously shadowed"
	default:
		_ = v
		return
	}
}
