package combine

import "fmt"

func combine() {
	// want "Variable 'x' can be moved to tighter if scope"
	// want "Variable 'y' can be moved to tighter if scope"
	if x, y := 1, 2; x < y {
		fmt.Println(x, y)
	}
}

func combineNested() {
	// want "Variable 'x' can be moved to tighter if scope"
	// want "Variable 'y' can be moved to tighter if scope"
	{
		if x, y := 1, 2; x < y {
			fmt.Println(x, y)
		}
	}
}

func nested() {
	// want "Variable 'x' can be moved to tighter if scope"
	{
		// want "Variable 'y' can be moved to tighter if scope"
		{
			if x, y := 1, 2; x < y {
				fmt.Println(x, y)
			}
		}
	}
}

func dependent() {
	x := 1
	// want "Variable 'y' can be moved to tighter if scope"
	if y := x + 1 ; x < y {
		fmt.Println(x, y)
	}
}

func multivalue() {
	x := 1                                           // want "Variable 'x' can be moved to tighter if scope"
	y, ok := func() (int, bool) { return 2, true }() // want "Variables 'y' and 'ok' can be moved to tighter if scope"

	if x == 1 && ok {
		fmt.Println(x, y)
	}
}
