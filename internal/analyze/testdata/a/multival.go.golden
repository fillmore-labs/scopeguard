package a

import "fmt"

// Multi-value assignment where both variables are only used in one block.
func multiValSimple() {

	// want "Variables 'x' and 'y' can be moved to tighter block scope"
	if true {
		x, y := 1, 2
		fmt.Println(x, y)
	}
}

// Multi-value assignment where both variables are only used in one block.
func multiValTwoBlock() {
	// want "Variable 'x' can be moved to tighter block scope"
	// want "Variable 'y' can be moved to tighter block scope"
	if true {
		x := 1
		y := 2
		fmt.Println(x, y)
	}
}

// Multi-value assignment where variables have different usage patterns.
func multiValDifferent() {
	x, y := 1, 2
	if true {
		fmt.Println(x, y)
	}
	fmt.Println(x) // x is used outside, so neither should be moved
}

// Multi-value assignment with 3 variables.
func multiValThreeBlock() {
	// want "Variables 'x', 'y' and 'z' can be moved to tighter block scope"
	if true {
		x, y, z := 1, 2, 3
		fmt.Println(x, y, z)
	} else {
		fmt.Println("false")
	}
}

// Multi-value assignment with 3 variables.
func multiValThreeIf() {
	// want "Variables 'x', 'y' and 'z' can be moved to tighter if scope"
	if x, y, z := 1, 2, 3; true {
		fmt.Println(x, y)
	} else {
		fmt.Println(z)
	}
}

// Multi-value assignment where only one variable is used in tighter scope.
func multiValOneUsed() {

	x, y := 1, 2
	if true {
		fmt.Println(x)
	}
	fmt.Println(y)
}
